# EditorConfig - Configuración de estilo de código
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Kotlin files
[*.{kt,kts}]
indent_size = 4
max_line_length = 120
ij_kotlin_code_style_defaults = KOTLIN_OFFICIAL

# XML files (layouts, manifests, etc.)
[*.xml]
indent_size = 4
max_line_length = 160

# Gradle files
[*.gradle.kts]
indent_size = 4

[build.gradle.kts]
indent_size = 4

# TOML files (Gradle version catalog)
[*.toml]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Properties files
[*.properties]
indent_size = 4
insert_final_newline = false

# SQL files
[*.sql]
indent_size = 4
max_line_length = 120

# Python files
[*.py]
indent_size = 4
max_line_length = 100

# Shell scripts
[*.sh]
indent_size = 2
end_of_line = lf

# Batch files
[*.bat]
indent_size = 2
end_of_line = crlf

# ProGuard files
[*.pro]
indent_size = 2

# gitignore files
[.gitignore]
indent_size = 2

# Kotlin specific settings
[*.kt]
# Imports
ij_kotlin_imports_layout = *, java.**, javax.**, kotlin.**, ^
ij_kotlin_name_count_to_use_star_import = 5
ij_kotlin_name_count_to_use_star_import_for_members = 3

# Blank lines
ij_kotlin_blank_lines_around_block_when_branches = 0
ij_kotlin_blank_lines_before_declaration_with_comment_or_annotation_on_separate_line = 1

# Spacing
ij_kotlin_line_break_after_multiline_when_entry = true
ij_kotlin_spaces_before_comma = false
ij_kotlin_spaces_after_comma = true

# Wrapping
ij_kotlin_assignment_wrap = normal
ij_kotlin_method_parameters_wrap = normal
ij_kotlin_method_call_chain_wrap = normal

# Alignment
ij_kotlin_align_multiline_parameters = true
ij_kotlin_align_multiline_parameters_in_calls = false

# Comments
ij_kotlin_block_comment_at_first_column = false
ij_kotlin_line_comment_at_first_column = false
ij_kotlin_line_comment_add_space = true

# Naming conventions (recommended)
# Classes: PascalCase
# Functions: camelCase  
# Constants: UPPER_SNAKE_CASE
# Private properties: _camelCase (with underscore prefix)
